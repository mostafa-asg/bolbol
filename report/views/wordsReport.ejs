<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/bootstrap.min.js"></script>
    <title>Words Report</title>
  </head>

  <body>
    <div class="container">
      <div class="page-header">
        <h1>Words Report</h1>
        <hr />
      </div>
      <table class="table table-striped table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">Word</th>
            <th scope="col">Answered</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < data.length; i++) { var percent = data[i].success
          * 100 / (data[i].success + data[i].failure); var answredClass =
          "text-success"; if (percent < 80 && percent >= 50) { answredClass =
          "text-warning"; } else if (percent < 50) { answredClass =
          "text-danger"; } %>
          <tr>
            <td>
              <%= data[i].word %>
            </td>
            <td class="<%= answredClass %>">
              % <%= data[i].success * 100 / (data[i].success + data[i].failure)
              %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
